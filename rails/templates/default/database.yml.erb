<% (['development', 'testing', 'staging', 'production'] + [@environment]).uniq.each do |env| -%>
<%= env %>:
  adapter: <%= @database[:adapter].to_s.inspect %>
  database: <%= @database[:database].to_s.inspect %>
  encoding: utf8
  host: <%= (@database[:host] || 'localhost').to_s.inspect %>
  username: <%= @database[:username].to_s.inspect %>
  password: <%= @database[:password].to_s.inspect %>
  reconnect: <%= @database[:reconnect] ? 'true' : 'false' %>
  pool: <%= @database[:pool].to_i.inspect %>
<% if @database[:tcp_keepalives_idle] -%>
  tcp_keepalives_idle: <%= @database[:tcp_keepalives_idle].to_i.inspect %>
<% end -%>
<% if @database[:tcp_keepalives_interval] -%>
  tcp_keepalives_interval: <%= @database[:tcp_keepalives_interval].to_i.inspect %>
<% end -%>
<% if @database[:tcp_keepalives_count] -%>
  tcp_keepalives_count: <%= @database[:tcp_keepalives_count].to_i.inspect %>
<% end -%>
<% if @database[:port] -%>
  port: <%= @database[:port].to_i.inspect %>
<% end -%>

<% end %>
